<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Please, fill out the following form and join our community.</h3>
          <%= simple_form_for [@profil] do |f| %>
            <%= f.input :full_name %>
            <%= f.input :actual_job %>
            <%= f.input :company %>
            <%= f.input :description %>
            <%= f.input :dream_job %>
            <%= f.input :address, :input_html => { :value => current_user.address} %>
            <%= f.input :image, as: :file %>
            <div class="d-flex justify-content-between align-items-center">
            <%= link_to "Back", dashboard_path, class: "btn btn-back" %>
            <%= f.submit "Create your profil !", class: "btn btn-primary" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
